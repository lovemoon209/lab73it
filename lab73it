#include <iostream>
#include <iomanip>
using namespace std;

void InputMatrix(int** a, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cout << "a[" << i << "][" << j << "] = ";
            cin >> a[i][j];
        }
    }
}

void OutputMatrix(int** a, int n) {
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            cout << setw(5) << a[i][j];
        cout << endl;
    }
}

bool Part1_Count(int** a, int n, int& count) {
    count = 0;
    bool hasZero = false;

    for (int j = 0; j < n; j++) {
        bool colHasZero = false;
        for (int i = 0; i < n; i++) {
            if (a[i][j] == 0) {
                colHasZero = true;
                hasZero = true;
                break;
            }
        }
        if (colHasZero) {
            for (int i = 0; i < n; i++) {
                if (a[i][j] > 0)
                    count++;
            }
        }
    }

    return hasZero;
}

bool IsMaxInRowN(int** a, int n, int row, int col) {
    for (int j = 0; j < n; j++) {
        if (a[row][j] > a[row][col])
            return false;
    }
    return true;
}

bool IsMinInColK(int** a, int n, int row, int col) {
    for (int i = 0; i < n; i++) {
        if (a[i][col] < a[row][col])
            return false;
    }
    return true;
}

void Part2_SaddlePoint(int** a, int n) {
    cout << "\nmin max point:\n";
    bool found = false;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (IsMaxInRowN(a, n, i, j) && IsMinInColK(a, n, i, j)) {
                cout << setw(5) << "(" << i + 1 << "," << j + 1 << ")\n";
                found = true;
            }
        }
    }

    if (!found)
        cout << "not found";
}

int main() {
    int n;
    cout << "n = ";
    cin >> n;

    int** a = new int*[n];
    for (int i = 0; i < n; i++)
        a[i] = new int[n];

    InputMatrix(a, n);

    cout << "\n start:\n";
    OutputMatrix(a, n);

    int count;
    bool hasZero = Part1_Count(a, n, count);
    if (hasZero)
        cout << "\n+: " << count << endl;
    else
        cout << "\nwithout 0\n";

    Part2_SaddlePoint(a, n);

    for (int i = 0; i < n; i++)
        delete[] a[i];
    delete[] a;

    return 0;
}
